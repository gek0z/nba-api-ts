{
  "name": "nba-api-ts",
  "version": "0.1.0",
  "description": "TypeScript NBA API client â€” wraps stats.nba.com and cdn.nba.com live data",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm && bun x tsc --emitDeclarationOnly",
    "test": "bun test",
    "test:integration": "NBA_INTEGRATION_TESTS=1 bun test tests/integration",
    "test:integration:tls": "NBA_INTEGRATION_TESTS=1 NBA_USE_TLS=1 bun test tests/integration"
  },
  "keywords": ["nba", "api", "basketball", "stats", "typescript"],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tlsclientwrapper": "^4.1.2",
    "typescript": "^5.7.0"
  },
  "trustedDependencies": [
    "koffi"
  ]
}
